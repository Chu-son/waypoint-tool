{
    "name": "Line Generator",
    "version": "1.1.0",
    "description": "始点から直線方向に等間隔の Waypoint を配置するシンプルなジェネレーターです。",
    "type": "python",
    "executable": "main.py",
    "inputs": [
        {
            "id": "start_point",
            "label": "Start Point",
            "type": "point"
        }
    ],
    "needs": [],
    "properties": [
        {
            "name": "num_points",
            "label": "Number of Points",
            "type": "integer",
            "default": 5
        },
        {
            "name": "spacing",
            "label": "Point Spacing (m)",
            "type": "float",
            "default": 1.0
        }
    ]
}